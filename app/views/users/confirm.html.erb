<div class="container ">
  <div class="row justify-content-center">
    <div class="col-5">
      <h1>Confirm User</h1>
      <%= form_with model: @user , url: users_path , method: :post do |form|%>
        <% byebug %>
        <%= form.label :username , "Name :"%>
        <%= form.text_field :username %><br/><br/>

        <%= form.label :email , "Email :"%>
        <%= form.email_field :email %><br/><br/>

        <%= form.label :password , "Password :"%>
        <%= form.text_field :password %><br/><br/>

        <%= form.label :password_confirmation , "Confirm Password :"%>
        <%= form.text_field :password_confirmation %><br/><br/>

        <%= form.label :phone , "Phone :"%>
        <%= form.telephone_field :phone %><br/><br/>

        <%= form.label :avatar , "Profile :"%>
        <%= form.file_field :avatar %><br/><br/>
        
        <%= form.submit "Submit"%>
      <% end %>
    </div>
  </div>
</div>