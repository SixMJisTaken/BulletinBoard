<div class="container ">
  <div class="row justify-content-center">
    <div class="col-5">
      <h1>Update Users</h1>
      <%= form_with model: @user , url: user_path , method: :put do |form|%>
        <%= form.label :username , "Name :"%>
        <%= form.text_field :username %><br/><br/>
        <%= @user.errors[:username].first %>

        <%= form.label :email , "Email :"%>
        <%= form.email_field :email %><br/><br/>
        <%= @user.errors[:email].first %><br/>


        <%= form.label :password , "Password :"%>
        <%= form.text_field :password %><br/><br/>
        <%= @user.errors[:password].first %>


        <%= form.label :password_confirmation , "Confirm Password :"%>
        <%= form.text_field :password_confirmation %><br/><br/>
        <%= @user.errors[:password_confirmation].first %><br/>


        <%= form.label :phone , "Phone :"%>
        <%= form.telephone_field :phone %><br/><br/>
        <%= @user.errors[:phone].first %><br/>

        <%= form.label :avatar , "Profile :"%>
        <%= form.file_field :avatar %><br/><br/>
        
        <%= form.submit "Submit"%>
      <% end %>
    </div>
  </div>
</div>