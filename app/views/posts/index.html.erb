<div class="container ii">
  <div class="row justify-content-center">
    <div class="col-10 gg">
      <form>
        <label for="keyword">Keyword:</label>
        <input type="text" id="keyword" name="keyword">
        <input type="submit" value="Submit" class="btn">
      </form>
      <%= link_to "Download", class: "btn"%>  
      <%= link_to "Upload" , class: "btn"%>
      <%= link_to "Create" , new_post_path , class: "btn"%>
    </div>
    <div class="col-10 hh">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Post Title</th>
            <th scope="col">Post Description</th>
            <th scope="col">Posted User</th>
            <th scope="col">Posted Date</th>
            <th scope="col">Operation</th> 
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <th scope="row"><%= post.title %></th>
              <td><%= post.description %></td>
              <td>Admin</td>
              <td><%= post.created_at %></td>
              <td>
                <%= link_to "Edit" , edit_post_path(post.id) , class: "btn btn-secondary" %>
                <%= link_to "Delete" , post_path(post.id) ,data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } , class: "btn btn-secondary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>