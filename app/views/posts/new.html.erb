<div class="container ">
  <div class="row justify-content-center">
    <div class="col-5">
      <h1>Create Post</h1>
      <%= form_with model: @post , url: confirm_posts_path , method: :post do |form|%>
        <%= form.label :title , "Title :" %>
        <%= form.text_field :title , value: @post.title %><br/><br/>
        <% @post.errors.full_messages_for(:title).each do |message| %>
          <div><%= message %></div>
        <% end %>
        <%= form.label :description , "Description :"%>
        <%= form.text_area :description , value: @post.description %><br/>
        <% @post.errors.full_messages_for(:description).each do |message| %>
          <div><%= message %></div>
        <% end %>
        <%= form.submit "Submit"%>
      <% end %>
    </div>
  </div>
</div>